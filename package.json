{
  "name": "xivdyetools",
  "version": "2.0.4",
  "description": "A comprehensive web-based toolset for Final Fantasy XIV players to explore dye colors, create harmonious color palettes, match colors from images, find smooth color transitions, compare dyes side-by-side, and simulate how dye combinations appear to colorblind players for in-game gear and housing projects.",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "build:css": "tailwindcss -i ./src/tailwind-input.css -o ./assets/css/tailwind.css",
    "build:css:watch": "tailwindcss -i ./src/tailwind-input.css -o ./assets/css/tailwind.css --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FlashGalatine/xivdyetools.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/FlashGalatine/xivdyetools/issues"
  },
  "homepage": "https://github.com/FlashGalatine/xivdyetools#readme",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@testing-library/dom": "^9.3.3",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vitest/coverage-v8": "^4.0.13",
    "@vitest/ui": "^4.0.13",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-vitest": "^0.5.4",
    "jsdom": "^23.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.1.0",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.3.2",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vitest": "^4.0.13"
  },
  "dependencies": {
    "xivdyetools-core": "^1.1.0"
  }
}
